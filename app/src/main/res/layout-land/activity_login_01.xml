<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@mipmap/bg_login"
             tools:context="com.sibozn.gochat.activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo"/>

            <EditText
                android:id="@+id/user_email"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/dialog_mail"
                android:hint="@string/login_email_hint"
                android:inputType="textEmailAddress"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:text="290896625@qq.com"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                />

            <EditText
                android:id="@+id/user_password"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/dialog_password"
                android:hint="@string/login_password_hint"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:text="111111"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@mipmap/button_login"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@mipmap/img_or"/>

            <Button
                android:id="@+id/bt_regest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/img_register"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
