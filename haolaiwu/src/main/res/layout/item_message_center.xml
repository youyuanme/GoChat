<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <com.yibingding.haolaiwu.view.ListItemDelete1
        android:id="@+id/ll_list_item_del"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_red_frame__rect_round_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_message_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/new_big_text" />

            <TextView
                android:id="@+id/tv_message_center_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="75dp"
                android:alpha="0.6"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/new_small_text" />

            <TextView
                android:id="@+id/tv_message_center_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:alpha="0.6"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/new_small_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/new_red"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/delete"
            android:textColor="@android:color/white" />
    </com.yibingding.haolaiwu.view.ListItemDelete1>

</LinearLayout>