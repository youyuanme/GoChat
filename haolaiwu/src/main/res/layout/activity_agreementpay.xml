<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bgcolor" >
	<ImageView 
	    android:layout_width="40dp"
	    android:padding="12dp"
	    android:layout_height="match_parent"
	    android:onClick="back"
	    android:src="@drawable/agreementpay_back_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付页面"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/title_textsize"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在处理中\n请选择支付方式"
        android:padding="55dp"
        android:background="#eee"
        android:gravity="center_horizontal"/>
	<LinearLayout 
	    android:clickable="true"
	    android:onClick="zfbpay"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="8dp"
	    android:gravity="center_vertical"
	    android:layout_marginTop="30dp"
	    android:orientation="horizontal">
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="60dp"
	        android:src="@drawable/agreementpay_zhifubao_img"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="支付宝"
	        
	        android:textSize="18sp"/>
	      <TextView 
	          android:paddingRight="8dp"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="支付宝钱包支付"
	       	android:gravity="right" 
	        android:textSize="17sp"/>
	      <ImageView android:layout_width="wrap_content"
	          android:layout_height="20dp"
	          android:src="@drawable/img_right"/>
	</LinearLayout>
</LinearLayout>
