<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewPic"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />
        <!-- android:background="@drawable/bg_pic" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="你好你好你好年后给借口借口借口借口经济科技"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewSth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="80"
                    android:textColor="@color/lightGrey"
                    android:textSize="@dimen/new_small_text" />

                <TextView
                    android:id="@+id/textViewRooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="一"
                    android:textColor="@color/lightGrey"
                    android:textSize="@dimen/new_small_text" />

                <TextView
                    android:id="@+id/textViewMoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="7800元/m2"
                    android:textColor="@color/tabSelect"
                    android:textSize="@dimen/new_small_text" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_dizhi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textViewCommissionTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_commission"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="佣金"
                    android:textColor="@color/white"
                    android:textSize="@dimen/new_small_text" />

                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/textViewCommissionTag"
                    android:singleLine="true"
                    android:text="地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址"
                    android:textColor="@color/lightGrey"
                    android:textSize="@dimen/new_small_text" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewTip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tip1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="学区房源"
                    android:textColor="#03A05B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewTip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_tip2"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="地铁上盖"
                    android:textColor="#FF981F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewTip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_tip3"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#53C9F9"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>